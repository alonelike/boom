#!groovy

node() {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
       }
      stage('Build and Push'){
      docker.withRegistry('https://registry.hub.docker.com', 'credentials-id') {

         docker.build("836599/venkisample:${env.BUILD_ID}").push()
     }
  }
}
    catch (err) }
                currentBuild.result = "FAILURE"
                 throw err
      }
}
